volatile u16 ADC_Data[4];

void Delay(u32 A){
	u32 B = A;
	u32 C = A;
	while(B--){
		while(C--);
		C = A;
	}
}

SEVENSEGMENT_t S1;

void DMAFinished(void){

	asm("NOP");

}

void Count1(void){

	asm("NOP");
	while(1);
}

void Comp(void){

	asm("NOP");
}
